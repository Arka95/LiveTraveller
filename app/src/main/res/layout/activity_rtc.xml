<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.arkabhowmik.livetraveller.VideoActivity">
    <android.opengl.GLSurfaceView
        android:id="@+id/glview_call"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_rotate"
        android:id="@+id/buttonSwap"
        android:scaleType="fitCenter"
        android:background="#00ffffff"
        android:adjustViewBounds="true" />
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="left"
        android:src="@drawable/ic_flash"
        android:id="@+id/buttonFlash"
        android:scaleType="fitCenter"
        android:background="#00ffffff"
        android:adjustViewBounds="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/buttonSwap"
        android:layout_toEndOf="@+id/buttonSwap" />
    <ImageButton
        android:layout_width="40dp"
        android:id="@+id/buttonLeave"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:scaleType="fitCenter"
        android:background="#00ffffff"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_cancel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/buttonFlash"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:padding="10dp"
        android:id="@+id/tvLocale"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    />

</RelativeLayout>
